<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
        <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
                                          
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <title>App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
 <%= javascript_importmap_tags %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
<nav class="navbar navbar-expand-lg bg-light">
  <div class="container-fluid">
  <%= link_to "TASK MANAGER" ,root_path, class:"navbar-brand"%>
    
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">

      <% if user_signed_in? %>
      <%= link_to t('link.edit_profile'), edit_user_registration_path,class:"nav-link active" %>
      <%= link_to t('link.user_list'), users_path,class:"nav-link active" %>
      <%= link_to t('link.task_list'), tasks_path,class:"nav-link active" %>
      <%= link_to t('link.new_task'), new_task_path,class:"nav-link active" %> 
 
      <%= button_to t('link.sign_out'), destroy_user_session_path, method: :delete ,class:"nav-link active" %>
      <%= link_to "English", root_path(locale: :en),class:"nav-link active"%> 
       <%= link_to "German Deutsch", root_path(locale: :es),class:"nav-link active"%>
<%else%>
      <%= link_to t('link.sign_up'), new_user_registration_path,class:"nav-link active" %>
      <%= link_to t('link.sign_in'),  new_user_session_path,class:"nav-link active" %>
  <%end%> 
 
      </div>
    </div>
  </div>
</nav>
<br>
     <div class="container">
     <%begin%>
 <% if notice[3]%>
 <p class="alert alert-success"><%= notice%></p>
  <%end%>
  <%rescue%>
  <%end%>
  <%if alert%>
    <p class="alert alert-danger"><%= alert%></p>
  <%end%>
        <%= yield %>
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
  </body>
</html>
