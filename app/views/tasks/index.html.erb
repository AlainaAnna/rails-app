<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>
<table class="table table-bordered table-striped table hover">
 <thead class="table-dark">
  <tr>
    <th><center>Task Name</center></th>
    <th><center>Due_Date</center></th>
    <th><center>Status</center></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <% @tasks.each do |task| %>
  <tr>
    <td class="table-warning"><center><%= task.name %></center></td>
    <td class="table-light"><center><%= task.duedate %></center></td>
    <td class="table-warning"><center><%= task.status %></center></td>
    <td><center><%= link_to 'Show', task,  class:"btn btn-warning" %></center></td>
    <td><center><%= link_to 'Edit', edit_task_path(task), class:"btn btn-warning"%></center></td>
  </tr>
<% end %>
</table>
<br />
<%= link_to "New task", new_task_path, class:"btn btn-dark" %>

